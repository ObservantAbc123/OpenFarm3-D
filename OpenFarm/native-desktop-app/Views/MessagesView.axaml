<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:native_desktop_app.ViewModels"
             x:Class="native_desktop_app.Views.MessagesView"
             x:DataType="vm:MessagesViewModel">

    <DockPanel LastChildFill="True" Margin="0,0,0,0">

        <!-- Top bar -->
        <Border DockPanel.Dock="Top"
                Background="#3C3836"
                CornerRadius="10"
                Padding="10"
                Margin="0,0,0,8">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Text="{Binding CountText}"
                           Foreground="#EBDBB2"
                           VerticalAlignment="Center" />
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            Spacing="8"
                            HorizontalAlignment="Right">
                    <Button Content="Refresh"
                            Command="{Binding RefreshCommand}" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Column headers -->
        <Border DockPanel.Dock="Top"
                CornerRadius="10"
                Padding="10"
                Margin="0,0,0,5">
            <Grid ColumnDefinitions="3*,3*,*,*,*"
                  ColumnSpacing="10">
                <TextBlock Grid.Column="0"
                           Text="User"
                           Foreground="#EBDBB2"
                           FontWeight="Bold"
                           HorizontalAlignment="Left" />
                <TextBlock Grid.Column="1"
                           Text="Email"
                           Foreground="#EBDBB2"
                           FontWeight="Bold"
                           HorizontalAlignment="Center" />
                <TextBlock Grid.Column="2"
                           Text="PR"
                           Foreground="#EBDBB2"
                           FontWeight="Bold"
                           HorizontalAlignment="Center" />
                <TextBlock Grid.Column="3"
                           Text="Unresolved"
                           Foreground="#EBDBB2"
                           FontWeight="Bold"
                           HorizontalAlignment="Center" />
                <TextBlock Grid.Column="4"
                           Text="Open Log"
                           Foreground="#EBDBB2"
                           FontWeight="Bold"
                           HorizontalAlignment="Right" />
            </Grid>
        </Border>

        <!-- Rows -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Rows}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="vm:ConversationSummary">
                        <Border Background="#504945"
                                CornerRadius="10"
                                Margin="0,4,0,4"
                                Padding="10">
                            <Grid ColumnDefinitions="3*,3*,*,*,*"
                                  ColumnSpacing="10"
                                  VerticalAlignment="Center">

                                <!-- User -->
                                <TextBlock Grid.Column="0"
                                           Text="{Binding DisplayName}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left" />

                                <!-- Email -->
                                <TextBlock Grid.Column="1"
                                           Text="{Binding EmailAddress}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center" />

                                <!-- PR -->
                                <TextBlock Grid.Column="2"
                                           Text="{Binding ActivePrLabel}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center" />

                                <!-- Unresolved -->
                                <TextBlock Grid.Column="3"
                                           Text="{Binding UnresolvedForUtc}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center" />

                                <!-- Open Log -->
                                <Button Grid.Column="4"

                                        Content="{Binding ActivePrLabel, StringFormat=Open {0}}"
                                        Command="{Binding $parent[ItemsControl].((vm:MessagesViewModel)DataContext).ShowConversationCommand}"
                                        CommandParameter="{Binding}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Right" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

    </DockPanel>
</UserControl>